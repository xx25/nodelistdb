    .analytics-links form {
        flex-direction: column;
        align-items: stretch;
    }
    
    .analytics-links input {
        width: 100%;
    }
    
    .data-table {
        font-size: 0.9rem;
    }
    
    .data-table th,
    .data-table td {
        padding: 0.5rem;
    }
}
