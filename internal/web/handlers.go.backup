    padding: 1.5rem;
    border-radius: var(--radius);
    border: 1px solid var(--border-color);
    margin: 2rem 0;
}

.filter-options {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin: 1rem 0;
}

.filter-options label {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-weight: 400;
